<h1 class="text-center mb-4">Register</h1>

<form action="~/TaskDop3/Index" method="post" style="max-width: 400px; margin: 0 auto 32px" data-ajax-loading="#load" data-ajax-update="#result" data-ajax="true">
    <div class="form-group mb-3">
        <label for="fullName">Full name</label>
        <input type="text" class="form-control" id="fullName" name="FullName">
    </div>
    <div class="form-group mb-3">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="Email">
    </div>
    <div class="form-group mb-5">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="Password">
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

<div id="load" style="display:none; text-align: center">Loading...</div>
<div id="result" class="mx-auto mb-3 w-50"></div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-ajax-unobtrusive@3.2.6/dist/jquery.unobtrusive-ajax.min.js"></script>
}

