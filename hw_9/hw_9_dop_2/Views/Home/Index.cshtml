@using hw_9_dop_2.ViewModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<hw_9_dop_2.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-4 mb-5">
    <h1 class="display-4">Добро пожаловать в "Next"</h1>
</div>

<div>
    <h3 class="mb-3">Категории статей</h3>
    <ul class="list-group flex-row gap-3">
        @foreach (CategoryViewModel category in Model)
        {
            <li class="list-group-item p-0" style="border-radius: 8px;">
                <a asp-controller="Category" asp-action="Index" asp-route-id="@category.Id" class="btn d-flex justify-content-between align-items-center p-3">
                    @category.Title
                    <span class="d-inline-block badge bg-primary rounded-pill ms-2 top-0">@category.CountArticles</span>
                </a>
            </li>   
        }
    </ul>
</div>
