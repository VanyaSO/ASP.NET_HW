@using Microsoft.AspNetCore.Html
@model hw_9_dop_2.Services.ArticleViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div style="max-width: 768px; margin: 0 auto;">
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <div style="height: 450px; border-radius: 16px; overflow: hidden; margin-bottom: 16px;">
            <img src="@Model.Image" style="width: 100%; height: 100%; object-fit: cover;" alt="Img">
        </div>
    }
    <div class="mb-4">
        <h1>@Model.Title</h1>
        <p class="mb-2">@Model.Description</p>
        <p class="mb-2">@Model.DateTimeCreate.ToShortDateString()</p>
        <p class="m-0">@Model.CategoryName</p>
    </div>
    <div class="px-4">
        @Html.Raw(@Model.TextContent)
    </div>
</div>
