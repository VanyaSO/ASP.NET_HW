@model Dictionary<string, string>

<h1>Results</h1>

@if (Model.Count != 0)
{
    <table class="table">
        <thead>
        <th>Giver</th>
        <th>Recipient</th>
        </thead>
        <tbody>
            @foreach (var pair in Model)
            {
                <tr>
                    <td>@pair.Key</td>
                    <td><a target="_blank" href="~/SecretSanta/RevealName?name=@pair.Key">Reveal name</a></td>
                </tr>
            }
        </tbody>
    </table>
}
