@using Microsoft.IdentityModel.Tokens
@model IEnumerable<BookCardViewModel>

<div class="text-center">
    <h1>Books</h1>    
</div>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 box-shadow h-100">
                <img class="card-img-top" src="@(book.Image.IsNullOrEmpty() ? $"http://dummyimage.com/400x250/C0C0C0FF.jpg&text={book.Title}" : book.Image)" style="height: 225px; width: 100%; display: block; background: silver">
                <div class="card-body d-flex flex-column">
                    <h3 class="card-title">@book.Title | @book.Author</h3>
                    <p class="card-subtitle">@book.Description</p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <span style="font-size: 24px;">@book.Price$</span>
                        <a asp-action="Book" asp-route-bookId="@book.Id" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>