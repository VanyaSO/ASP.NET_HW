@model Review

<form asp-controller="Review" asp-action="AddReview" method="post">
    <input type="hidden" asp-for="Id" value="0" />
    <input type="hidden" asp-for="BookId" value="1" />
    <div class="mb-3">
        <label asp-for="UserName" class="form-label">Your Name</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating (1-5)</label>
        <select asp-for="Rating" class="form-select">
            <option selected disabled></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Text" class="form-label">Review</label>
        <textarea asp-for="Text" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Send</button>
</form>