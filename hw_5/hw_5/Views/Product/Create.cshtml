<h1 mb="4">Create product</h1>
<form action="/product/create" method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="name" value="iPhone 15">
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" name="price" value="1200">
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" name="description" value="New iPhone 15 in all colors" rows="3"></textarea>
    </div>
    <button type="submit">Create</button>
</form>