@using Microsoft.AspNetCore.Mvc.TagHelpers
@using  hw_14.ViewModel
@model (LoginViewModel, RegisterViewModel);

@{
	bool isRegisterActive = ViewBag.IsRegisterAcive ?? false;
}

<div class="account-form">
	<div class="account-form-container @(isRegisterActive ? "right-panel-active" : "")" id="account-form-container">
		@await Html.PartialAsync("_LoginForm", Model.Item1)
		@await Html.PartialAsync("_RegisterForm", Model.Item2)
		
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left">
					<h1>Welcome Back!</h1>
					<p>To keep connected with us please login with your personal info</p>
					<button class="ghost" id="signIn">Sign In</button>
				</div>
				<div class="overlay-panel overlay-right">
					<h1>Hello, Friend!</h1>
					<p>Enter your personal details and start journey with us</p>
					<button class="ghost" id="signUp">Sign Up</button>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts
{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}