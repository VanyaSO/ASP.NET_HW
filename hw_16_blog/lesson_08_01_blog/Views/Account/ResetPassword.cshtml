@model lesson_08_01_blog.ViewModels.EmailViewModel

<h1 class="mb-3 text-center">Reset password</h1>
<form asp-action="ResetPassword" method="post" class="d-flex flex-column align-items-center">
    <div class="form-floating">
        <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
        <label asp-for="Email">Email address</label>
    </div>
    <div asp-validation-summary="ModelOnly" class="mt-2"></div>

    @Html.AntiForgeryToken()
    <button class="btn btn-dark mt-3" type="submit">Reset</button>
</form>